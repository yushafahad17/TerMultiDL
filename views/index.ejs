  <script>
    async function pasteClipboard() {
      try {
        const text = await navigator.clipboard.readText();
        document.getElementById('url').value = text;
      } catch (err) {
        alert("Gagal menempelkan URL. Pastikan Anda sudah menyalin link.");
      }
    }

    async function download(type) {
      const url = document.getElementById('url').value.trim();
      const resultDiv = document.getElementById('result');
      if (!url) {
        resultDiv.innerHTML = `<span class="text-red-500">üö´ Silakan masukkan URL.</span>`;
        return;
      }

      resultDiv.innerHTML = `<span class="text-blue-500 animate-pulse">‚è≥ Sedang memproses...</span>`;
      try {
        const res = await fetch(`/download?url=${encodeURIComponent(url)}&format=${type}`);
        const data = await res.json();
        if (data.success) {
          const cleanFileName = (data.title || 'file').replace(/[^a-z0-9_\-\.]/gi, '_');
resultDiv.innerHTML = `
  <div class="flex items-center justify-center gap-4">
    <img src="${data.thumbnail}" alt="${data.title}" class="w-20 h-20 object-cover rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-lg"/>
    <div>
      <p class="font-semibold">${data.title}</p>
      <a href="${data.link}" download="${cleanFileName}.${type}" target="_blank" class="text-green-500 font-semibold underline">
        ‚úÖ Klik di sini untuk mengunduh ${type.toUpperCase()}
      </a>
    </div>
  </div>`;

        } else {
          resultDiv.innerHTML = `<span class="text-red-500">‚ùå Gagal mengambil link unduhan.</span>`;
        }
      } catch (err) {
        resultDiv.innerHTML = `<span class="text-red-500">‚ö†Ô∏è Terjadi kesalahan pada koneksi atau server.</span>`;
      }
    }
  </script>
